{% extends "::base.html.twig" %}

{% block body %}
    {% for key, module in twig.app.modules %}
        {% if key != 'dashboard' %}
            <a href="{{ path(module.route) }}" class="module-logo" title="{{ ('module.' ~ key ~ '.description')|trans }}">
                {% set logoClass = loop.index|mapTo(['bg-red', 'bg-blue', 'bg-green', 'bg-yellow', 'bg-violet', 'bg-white']) %}
                {{ ('module.' ~ key ~ '.icon')|icon(logoClass) }}
                <h3>{{ ('module.' ~ key ~ '.title')|trans }}</h3>
                <span class="description">
                    {{ ('module.' ~ key ~ '.description')|trans }}
                </span>    
            </a>
        {% endif %}
    {% endfor %}
{% endblock %}
