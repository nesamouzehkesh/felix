{% extends "::base_login.html.twig" %}

{% block body %}
    <div class="block">
        {% if error %}
            <div class="alert alert-danger">
                <span class="glyphicon"></span>{{ error.message }}
            </div>
        {% endif %}

        <div class="panel panel-default">
            <div class="panel-body">
                <form action="{{ path('app_login_check') }}" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" id="username" name="_username" class="form-control input-lg" id="exampleInputEmail1" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control input-lg" id="password" name="_password" placeholder="Password">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> Keep me logged in
                        </label>
                    </div>
                    <button id="form-submit-login" class="btn btn-primary btn-lg btn-block" type="submit" data-style="expand-left">Login</button>            
                    <div class="margin-top-10">
                        <a href="#">I forgot my password</a>
                    </div>
                </form>        
            </div>
        </div>
    </div>
{% endblock %}
    
{% block script %}{% endblock %}