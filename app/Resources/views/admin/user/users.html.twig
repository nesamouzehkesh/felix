{% extends "::base.html.twig" %}

{% block headerContainer %}
    <div class="block" id="headerContainer">
        <div class="row">
            <div class="col-md-5">
                <button data-url="{{ path('user_admin_add') }}" type="button" class="btn btn-primary btn-sm action-add-user" data-target="#user-form-container">{{ 'icon.add'|icon }} {{ 'action.addNewItem'|trans }}</button>
            </div>
            <div class="col-md-7">
                <div class="pull-right">
                    <a href="{{ path('user_admin_myprofile') }}">{{ 'icon.user'|icon }} My Profile</a>
                </div>
            </div>
        </div>            
    </div>
{% endblock %}

{% block body %}
    <div class="modal fade" id="user-form-container" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
    <div class="modal fade" id="user-view-container" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Username</th>
                <th>Name</th>
                <th class="col-md-4"></th>
            </tr>
        </thead>
        <tbody>

        {% for user in pagination %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.firstName }} {{ user.lastName }}</td>
                <td>
                    <div class="pull-right">
                        {{ button(
                              'action.display', 
                              {
                                  url: path('user_admin_view', {'userId': user.id}),
                                  icon: 'icon.display', 
                                  toggleModal: 'user-view-container', 
                                  action: 'action-display-user'
                              }) }} 
                        {{ button(
                            'action.edit', 
                            {
                                url: path('user_admin_edit', {'userId': user.id}),
                                icon: 'icon.edit', 
                                toggleModal: 'user-form-container', 
                                action: 'action-edit-user'
                            }) }}
                        {{ button(
                            'action.delete', 
                            {
                                url: path('user_admin_delete', {'userId': user.id }),
                                icon: 'icon.delete', 
                                action: 'action-delete-user',
                            }) }}
                    </div>  
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table> 

    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>        
{% endblock %}
    
{% block script %}
    {% include '::admin/user/js/users.js.twig' %}
{% endblock %}