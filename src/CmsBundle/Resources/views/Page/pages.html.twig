{% extends "::base.html.twig" %}
{% block body %}
   
<a href="{{ path('nesa_admin_pages_add') }}" class="btn btn-primary" class="btn">Add New Page</a>

<div>
    Total number of pages is:
    {{ pagination.getTotalItemCount }}
</div>

<table class="table table-hover">
    <tr>
        {# sorting of properties based on query components #}
        <th>{{ knp_pagination_sortable(pagination, 'Id', 'page.id') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'Title', 'page.title') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'URL', 'page.url') }}</th>
    </tr>
    {# table body #}
    {% for page in pagination %}
        <tr {% if loop.index is odd %} class="color" {% endif %} >
            <td>{{ page.id }}</td>
            <td>{{ page.title }}</td>
            <td>{{ page.url }}</td>
            <td>
                <div class="pull-right">
                    <a href="{{ path('nesa_admin_pages_edit', {'pageId': page.id }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 
                        {{ 'Edit'|trans }}</a>
                    <a href="{{ path('nesa_admin_pages_delete', {'pageId': page.id }) }}">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> 
                        {{ 'Delete'|trans }}</a> 

                </div>  
            </td>
        </tr>
    {% endfor %}
</table>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>    
    
{% endblock %}